{
  "manifest_version": 3,
  "name": "Amazon Category Tabs",
  "version": "1.0",
  "description": "Converts Amazon category sidebar to top tabs",
  "content_scripts": [
    {
      "matches": ["https://www.amazon.co.jp/gp/*/books/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": ""
  },
  "background": {
    "service_worker": "background.js"
  }
}